<%= form_for(@task) do |t| %>

<div class="container">
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>

  <div>
    <% if !(@task.new_record?) %>
    <%= t.label :completed %>
    <%= t.check_box :completed %>
    <% end %>
  </div>

  <%= t.submit class: 'btn btn-primary' %>
  </div>
<% end %>


