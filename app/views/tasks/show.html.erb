<h1>Task Details</h1>

<p> <%= @task.details %> </p>

<p><%= link_to "Edit task", edit_task_path(@task) %></p>


<% if @task.completed == true %>
<input type="checkbox" name="done" disabled="true" checked >
<%= "This task is completed" %>

<% else %>
<input type="checkbox" name="done" disabled="true">
<p>This task is not completed yet</p>

<% end %>

<p><%= link_to "Go back to your tasks", tasks_path %></p>
